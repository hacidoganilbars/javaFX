<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.image.Image?>
<AnchorPane prefHeight="315.0" prefWidth="475.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
    <children>
        <Button layoutX="124.0" layoutY="249.0" mnemonicParsing="false" onAction="#login" text="Login">
            <font>
                <Font size="15.0"/>
            </font>
            <graphic>
                <ImageView fitHeight="50" fitWidth="75">
                    <image>
                        <Image url="img/tiger.png">
                        </Image>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <TextField fx:id="txtUserName" layoutX="43.0" layoutY="96.0" prefHeight="31.0" prefWidth="214.0"
                   promptText="UserName">
            <font>
                <Font size="15.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="txtPassword" layoutX="43.0" layoutY="138.0" prefHeight="31.0" prefWidth="214.0"
                       promptText="Password">
            <font>
                <Font size="15.0"/>
            </font>
        </PasswordField>
        <Label fx:id="lblStatus" layoutX="4.0" layoutY="36.0" prefHeight="25.0" prefWidth="290.0" text="Status"
               textFill="#d00e0e">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="261.0" layoutY="63.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="img/tiger.png"></Image>
            </image>
        </ImageView>
    </children>
</AnchorPane>
